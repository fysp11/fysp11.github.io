---
const gaTrackingId = import.meta.env.PUBLIC_GA_ID;
const hsTrackingId = import.meta.env.PUBLIC_HS_ID;
---
{gaTrackingId && (
    <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaTrackingId}`}></script>
        <script is:inline define:vars={{ gaTrackingId }}>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', gaTrackingId);
        </script>
    </>
)}
{hsTrackingId && (
    <script type="text/javascript" id="hs-script-loader" async defer src={`//js-na1.hs-scripts.com/${hsTrackingId}.js`}></script>
)}
