<div
  id="cookie-consent-banner"
  class="bg-muted text-muted-foreground border-border fixed right-0 bottom-0 left-0 z-50 hidden border-t p-4 text-center"
>
  <p class="mb-2">
    This website uses cookies to improve your experience and for advertising purposes. By clicking
    "Accept", you consent to the use of cookies.
  </p>
  <button
    id="accept-cookies"
    class="bg-primary text-primary-foreground hover:bg-primary/90 mr-2 cursor-pointer rounded px-4 py-2 font-bold"
  >
    Accept
  </button>
  <button
    id="decline-cookies"
    class="bg-secondary border-border text-secondary-foreground hover:bg-secondary/90 cursor-pointer rounded border px-4 py-2 font-bold"
  >
    Decline
  </button>
</div>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const banner = document.getElementById("cookie-consent-banner")
    const acceptBtn = document.getElementById("accept-cookies")
    const declineBtn = document.getElementById("decline-cookies")

    const consent = localStorage.getItem("cookie_consent")

    if (!consent) {
      banner.classList.remove("hidden")
    }

    function gtag() {
      window.dataLayer = window.dataLayer || []
      window.dataLayer.push(arguments)
    }

    acceptBtn.addEventListener("click", () => {
      gtag("consent", "update", {
        analytics_storage: "granted",
        ad_storage: "granted",
        ad_user_data: "granted",
        ad_personalization: "granted"
      })
      localStorage.setItem("cookie_consent", "granted")
      banner.classList.add("hidden")
    })

    declineBtn.addEventListener("click", () => {
      localStorage.setItem("cookie_consent", "denied")
      banner.classList.add("hidden")
    })
  })
</script>
