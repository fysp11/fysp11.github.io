---
const links = [
  { label: 'Home', href: '#top' },
  { label: 'About', href: '#bio' },
  { label: 'Experience', href: '#experience' },
  { label: 'Social', href: '#social' }
];
---

<nav
  aria-label="Page sections"
  class="pointer-events-none fixed inset-x-0 top-[calc(theme(space.4)+theme(space.4)/2)] z-40 flex justify-center md:inset-x-auto md:left-8 md:top-1/2 md:-translate-y-1/2 md:justify-start"
>
  <div
    class="pointer-events-auto flex items-center gap-2 rounded-md border border-border/70 bg-card/90 px-1 py-1 text-sm text-foreground/80 shadow-lg backdrop-blur-md md:flex-col md:items-stretch md:gap-2 md:rounded-md sm:px-2 md:py-3"
  >
    {
      links.map((link) => (
        <a
          href={link.href}
          class="rounded-md py-1 font-medium text-accent-foreground/80 transition hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring focus-visible:ring-ring/40 focus-visible:ring-offset-2"
        >
          {link.label}
        </a>
      ))
    }
  </div>
</nav>
