---
import ThemeToggleButton from '@/components/theme/ThemeToggleButton';
import { ME_PROFILE } from '@/constants/profile';
import { Image } from 'astro:assets';
---

<header class="bg-background/80 sticky top-0 z-40 w-full py-4 backdrop-blur-md">
  <div class="max-w-3xl mx-auto flex h-14 items-center px-2">
    <div class="hidden md:flex">
      <a href="/" class="flex items-center gap-2">
        <Image
          src="/icons/icon-192x192.png"
          width={32}
          height={32}
          alt={ME_PROFILE.personal.name}
        />
        <span class="hidden font-bold sm:inline-block">{ME_PROFILE.personal.name}</span>
      </a>
    </div>
    <div class="flex flex-1 items-center justify-end space-x-2">
      <ThemeToggleButton client:load />
    </div>
  </div>
</header>
