---
import ThemeToggleButton from '@/components/theme/ThemeToggleButton';
import { Image } from 'astro:assets';
import iconImage from '@/assets/images/icon-192x192.png';

interface Props {
  name: string;
}

const { name } = Astro.props;
---

<header class="bg-background/80 sticky top-0 z-40 w-full py-4 backdrop-blur-md">
  <div class="max-w-3xl mx-auto flex h-14 items-center px-2">
    <div class="flex">
      <a href="/" class="flex items-center gap-2">
        <Image
          src={iconImage}
          width={60}
          height={60}
          format="webp"
          alt="Site logo"
          class="h-10 w-10"
        />
        <span class="hidden font-bold sm:inline-block">{name}</span>
      </a>
    </div>
    <div class="flex flex-1 items-center justify-end space-x-2">
      <ThemeToggleButton client:idle />
    </div>
  </div>
</header>
