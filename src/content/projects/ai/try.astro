---
import Layout from "@/layouts/Layout.astro";
import Generator from "@/components/ai/Generator.tsx";
---

<Layout title="AI Story & Image Generator" description="Generate stories and images with AI.">
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold text-center mb-2 text-primary">AI Story & Image Generator</h1>
    <p class="text-center text-lg text-gray-600 mb-12">Bring your ideas to life. Write a prompt and let the AI create a story and an image for you.</p>
    <Generator client:load />
  </div>
</Layout>
