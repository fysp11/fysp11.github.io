---
import Layout from "@/layouts/Layout.astro"

const { frontmatter, slug } = Astro.props

const { title, description } = frontmatter
---

<Layout {title} {description}>
  <Fragment slot="head">
    <!-- Preconnect to improve resource loading -->
    <link rel="preconnect" href={Astro.site?.origin} />
    <link rel="dns-prefetch" href={Astro.site?.origin} />
  </Fragment>
  <article class="flex flex-col gap-8">
    <header class="flex flex-col gap-4">
      <div class="flex items-center gap-4">
        <a
          href={`/projects/${slug}`}
          class="text-muted-foreground hover:text-foreground transition-colors"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-6 w-6"><path d="m12 19-7-7 7-7"></path><path d="M19 12H5"></path></svg
          >
          <span class="sr-only">Back to Project</span>
        </a>
        <h1 class="text-4xl leading-tight font-bold tracking-tighter">{title}</h1>
      </div>
      <p class="text-muted-foreground text-lg">{description}</p>
    </header>
    <div class="prose prose-invert max-w-4xl">
      <slot />
    </div>
  </article>
</Layout>
